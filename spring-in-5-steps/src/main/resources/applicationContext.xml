<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
   
    <context:compenent-scan base-package= "com.in28minutes.spring.basics.springin5steps" />
   
	<bean id="xmlJdbcConnection"
		class="com.in28minutes.spring.basics.springin5steps.scope.xml.XmlJdbcConnection">

	</bean>

	<bean id="xmlPersonDAO"
		class="com.in28minutes.spring.basics.springin5steps.scope.xml.XmlPersonDAO2">
		<property name="xmlJdbcConnection" ref="xmlJdbcConnection"></property>
	</bean>
</beans>